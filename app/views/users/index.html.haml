.slides{style: 'background-color: grey;'}
  #usersCarousel.carousel.slide{'data-ride': 'carousel'}
    .carousel-inner
      - followees_ids = current_user.followees.pluck(:id)
      - @users.order(:username).each do |user|
        .carousel-item.text-center{class: ('active' if user == @users.first)}
          %h1
            %i.fas.fa-user.fa-10x
          .carousel-caption.d-none.d-md-block
            = link_to user_path(user.id) do
              %h1= user.username
            = render 'follow_link', user_id: user.id, followees_ids: followees_ids
            - unless user.profile.blank?
              %h2= user.profile
            - unless user.blog_url.blank?
              %p
                = link_to user.blog_url do
                  %i.fas.fa-blog
                  = user.blog_url

    %a.carousel-control-prev{href: '#usersCarousel', role: 'button', 'data-slide': 'prev'}
      %span.carousel-control-prev-icon{'aria-hidden': 'true'}
      %span.sr-only Previous
    %a.carousel-control-next{href: '#usersCarousel', role: 'button', 'data-slide': 'next'}
      %span.carousel-control-next-icon{'aria-hidden': 'true'}
      %span.sr-only Next
