.card
  .card-header
    %i.fa.fa-user
    = @user.username
    's profile
    = render 'follow_link', user: @user, followees_ids: current_user.followees.pluck(:id)
  .card-body
    .card-text
      = user_profile(@user) || "#{@user.username} didn't set any profile information yet..."
      - if !@user.blog_url.blank?
        %br/
        .card-link
          = link_to @user.blog_url do
            %i.fas.fa-blog
            = @user.blog_url

%br/

- if @user.followers.size > 0
  .h3
    = @user.followers.size
    = "Follower".pluralize(@user.followers.size)
  = @user.followers.pluck(:username).join(", ")

  %hr/

- if @user.followees.size > 0
  .h3
    = @user.followees.size
    = "Followee".pluralize(@user.followees.size)
  = @user.followees.pluck(:username).join(", ")
