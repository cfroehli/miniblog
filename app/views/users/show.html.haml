    %i.fa.fa-user
    = @user.username
    's profile
  .card-body
    .card-text
      = @user.profile
    - if !@user.blog_url.blank?
      %br/
      .card-link
        = link_to @user.blog_url do
          %i.fas.fa-blog
          = @user.blog_url

