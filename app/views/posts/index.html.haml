%h1 Miniblog home page

.card
  .card-body
    .card-title Latest content
    .card-text
      %ul.list-group.list-group-flush
      - @posts.each do |post|
        %li.list-group-item
          .row
            .col-9
              = post.content.truncate(40)
            .col-sm-auto
              = link_to post do
                %i.fa.fa-eye
            .col-sm-auto
              = link_to edit_post_path(post) do
                %i.fa.fa-edit
            .col-sm-auto
              = link_to post, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.far.fa-trash-alt

      %br

      .card-link
        = link_to new_post_path do
          %i.fas.fa-plus
          Post new content
